run = "npm run dev"
entrypoint = "index.js"
hidden = [".config", "package-lock.json", ".next", ".swc"]
modules = ["nodejs-22"]

[nix]
channel = "stable-24_11"
packages = ["nano", "supabase-cli", "gh", "which"]

[env]
NEXT_TELEMETRY_DISABLED = "1"
# NODE_ENV = "development"  # Commented out for build - Next.js sets this automatically

[deployment]
build = ["npm", "run", "build"]
run = ["npm", "run", "start"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3002
externalPort = 3002

[[ports]]
localPort = 14217
externalPort = 3003
exposeLocalhost = true

[[ports]]
localPort = 14298
externalPort = 4200
exposeLocalhost = true

[[ports]]
localPort = 16272
externalPort = 3000
exposeLocalhost = true

[[ports]]
localPort = 24282
externalPort = 5000
