run = "npm run dev"
entrypoint = "index.js"
hidden = [".config", "package-lock.json", ".next", ".swc"]
modules = ["nodejs-22"]

[nix]
channel = "stable-24_11"
packages = ["nano", "supabase-cli", "gh", "which", "uv"]

[env]
NEXT_TELEMETRY_DISABLED = "1"
# NODE_ENV = "development"  # Commented out for build - Next.js sets this automatically

[deployment]
build = ["npm", "run", "build"]
run = ["npm", "run", "start"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000

[[ports]]
localPort = 3001

[[ports]]
localPort = 3002

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 16272
externalPort = 3000
exposeLocalhost = true

[[ports]]
localPort = 24282
externalPort = 5000

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Dev Server"

[[workflows.workflow]]
name = "Next.js Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "next dev -p 5000 -H 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
