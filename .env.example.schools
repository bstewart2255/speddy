# Supabase Configuration (Required)
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Import Configuration
BATCH_SIZE=100                    # Number of records to process per batch
RATE_LIMIT_DELAY=1000             # Milliseconds between API requests
MAX_RETRIES=3                     # Number of retry attempts for failed requests
CONCURRENT_REQUESTS=5             # Number of concurrent API requests

# CSV Fallback Configuration (Optional)
# Set to true if NCES API is restrictive or you prefer using downloaded CSV files
USE_CSV_FALLBACK=false
DISTRICTS_CSV_PATH=./data/districts.csv
SCHOOLS_CSV_PATH=./data/schools.csv

# NCES Data Sources
# The script uses the Urban Institute Education Data API by default
# Alternative: Download CSV files from https://nces.ed.gov/ccd/files.asp
# Look for:
# - Public Elementary/Secondary School Universe Survey Data (schools)
# - Local Education Agency Universe Survey Data (districts)