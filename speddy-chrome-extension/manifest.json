{
  "manifest_version": 3,
  "name": "Speddy - SEIS Discrepancy Detector",
  "version": "3.0.0",
  "description": "Automatically detect discrepancies between SEIS and Speddy IEP data",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.seis.org/*",
    "https://www.seis.org/*",
    "https://speddy.xyz/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.seis.org/*",
        "https://www.seis.org/*"
      ],
      "js": ["content-scripts/seis.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Speddy - SEIS Discrepancy Detector"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
